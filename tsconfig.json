{
    "compilerOptions": {
        "target": "es6",
        "module": "commonjs",
        "strict": true,
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "baseUrl": "./src",
        "paths": {
            "Application/*": [
                "Application/*"
            ],
            "Common/*": [
                "Common/*"
            ],
            "Domain/*": [
                "Domain/*"
            ],
            "Infrastructure/*": [
                "Infrastructure/*"
            ],
            "Presentation/*": [
                "Presentation/*"
            ],
        },
        "outDir": "./dist",
        "rootDir": "./src",
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "resolveJsonModule": true
    }
}